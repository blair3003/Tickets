@page "/Tickets/Create"
@model Tickets.Pages.Tickets.CreateModel
@{
    ViewData["Title"] = "Create Ticket";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Summary" class="control-label"></label>
        <input asp-for="Input.Summary" class="form-control" />
        <span asp-validation-for="Input.Summary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Description" class="control-label"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
