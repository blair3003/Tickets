@page "/Tickets/{TicketId:int}"
@model Tickets.Pages.Tickets.DetailsModel
@{
    ViewData["Title"] = $"Ticket #{Model.TicketId}";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.AssigneeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.AssigneeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.ReporterId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.ReporterId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket!.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Priority)
        </dd>
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Created)
        </dd>
        <dt class="col-sm-2">
            Updated
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Updated)
        </dd>
    </dl>
    @if (Model.CanDeleteTicket)
    {
        <a asp-page="./Delete" asp-route-TicketId="@Model.TicketId" class="btn btn-danger">Delete Ticket</a>
    }
    @if (Model.CanEditTicket)
    {
        <a asp-page="./Edit" asp-route-TicketId="@Model.TicketId" class="btn btn-secondary">Edit Ticket</a>
    }
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
