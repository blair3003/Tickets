@page "/Tickets/{TicketId:int}"
@model Tickets.Pages.Tickets.DetailsModel
@{
    ViewData["Title"] = $"Ticket #{Model.TicketId}";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Summary
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket!.Summary
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket!.Description
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Category)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Status)
        </dd>
        <dt class="col-sm-2">
            Assignee
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket!.Assignee?.UserName
        </dd>
        <dt class="col-sm-2">
            Due Date
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket!.DueDate?.ToString("MMMM d, yyyy")
        </dd>
        <dt class="col-sm-2">
            Priority
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket!.Priority)
        </dd>
        <hr />
        <dt class="col-sm-2">
            Reporter
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket!.Reporter?.UserName
        </dd>
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket!.Created.ToString("MMMM d, yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Updated
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket!.Updated.ToString("MMMM d, yyyy HH:mm")
        </dd>
    </dl>
    @if (Model.CanDeleteTicket)
    {
        <a asp-page="./Delete" asp-route-TicketId="@Model.TicketId" class="btn btn-danger">Delete Ticket</a>
    }
    @if (Model.CanEditTicket)
    {
        <a asp-page="./Edit" asp-route-TicketId="@Model.TicketId" class="btn btn-secondary">Edit Ticket</a>
    }
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
