@page "/Tickets/{TicketId:int}/Delete"
@model Tickets.Pages.Tickets.DeleteModel
@{
    ViewData["Title"] = $"Delete Ticket #{Model.TicketId}";
}

<h1>@ViewData["Title"]</h1>

<p>Are you sure you want to delete this ticket?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Details" asp-route-TicketId="@Model.TicketId" class="btn btn-secondary">Cancel</a>
</form>
