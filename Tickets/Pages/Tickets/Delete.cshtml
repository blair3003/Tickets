@page "/Tickets/{TicketId:int}/Delete"
@model Tickets.Pages.Tickets.DeleteModel
@{
    ViewData["Title"] = $"Delete Ticket #{Model.TicketId}";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group row">
                    <p class="text-danger">Are you sure you want to delete this ticket?</p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="./Details" asp-route-TicketId="@Model.TicketId" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
